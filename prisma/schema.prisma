generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============== USER & AUTH ==============

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  username      String    @unique
  passwordHash  String?
  name          String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  picks         Pick[]
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============== SPORTS ==============

model Sport {
  id        String   @id @default(cuid())
  name      String   @unique  // "Football", "Basketball"
  slug      String   @unique  // "football", "basketball"
  createdAt DateTime @default(now())

  teams     Team[]
  seasons   Season[]
  games     Game[]
}

// ============== TEAMS ==============

model Team {
  id           String   @id @default(cuid())
  name         String   // "Alabama Crimson Tide"
  shortName    String   // "Alabama"
  abbreviation String   // "ALA"
  sportId      String
  conference   String?  // "SEC", "Big Ten", etc.
  division     String?  // For basketball conferences with divisions
  logoUrl      String?
  primaryColor String?  // Hex color
  createdAt    DateTime @default(now())

  sport        Sport    @relation(fields: [sportId], references: [id])
  homeGames    Game[]   @relation("HomeTeam")
  awayGames    Game[]   @relation("AwayTeam")
  picks        Pick[]

  @@unique([abbreviation, sportId])
}

// ============== SEASONS ==============

model Season {
  id        String   @id @default(cuid())
  sportId   String
  name      String   // "2024-25" or "2024"
  year      Int      // Starting year (2024 for 2024-25 season)
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())

  sport     Sport    @relation(fields: [sportId], references: [id])
  games     Game[]

  @@unique([sportId, year])
}

// ============== GAMES ==============

enum GameStatus {
  SCHEDULED
  IN_PROGRESS
  FINAL
  POSTPONED
  CANCELLED
}

model Game {
  id          String     @id @default(cuid())
  sportId     String
  seasonId    String
  homeTeamId  String
  awayTeamId  String
  gameTime    DateTime
  week        Int?       // For football (Week 1, 2, etc.)
  homeScore   Int?
  awayScore   Int?
  status      GameStatus @default(SCHEDULED)
  venue       String?
  isNeutral   Boolean    @default(false)  // Neutral site game
  externalId  String?    @unique // ID from external API for syncing
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  sport       Sport      @relation(fields: [sportId], references: [id])
  season      Season     @relation(fields: [seasonId], references: [id])
  homeTeam    Team       @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeam    Team       @relation("AwayTeam", fields: [awayTeamId], references: [id])
  picks       Pick[]

  @@index([sportId, seasonId, week])
  @@index([gameTime])
  @@index([externalId])
}

// ============== PICKS ==============

model Pick {
  id               String   @id @default(cuid())
  userId           String
  gameId           String
  pickedTeamId     String
  confidencePoints Int?     // Optional: 1-10 or number of games that week
  isCorrect        Boolean? // null until game is final
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game             Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  pickedTeam       Team     @relation(fields: [pickedTeamId], references: [id])

  @@unique([userId, gameId])  // One pick per user per game
  @@index([userId])
  @@index([gameId])
}
